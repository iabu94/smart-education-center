@model smart_education_center.Models.StudentViewModel
@{
    Layout = null;
    ViewBag.Title = "ResetPassword";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Cyber School</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

    <style>
        /* Remove the navbar's default margin-bottom and rounded borders */
        .navbar {
            margin-bottom: 0;
            border-radius: 0;
        }

        /* Add a gray background color and some padding to the footer */
        footer {
            background-color: #f2f2f2;
            padding: 25px;
        }
    </style>
</head>

<body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"><img style="height:30px" src="~/Images/logo.png" /></a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="#">Home</a></li>
                    <li><a href="#">About</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("Index", "Home")"><span class="glyphicon"></span> Back </a></li>
                </ul>
            </div>
        </div>
    </nav>

   
    <div class="jumbotron">
        <div class="container text-center">
            <br />
            <div class="row">
                <div class="col-xs-3">
                </div>
                <div class="col-xs-6">
                    @if (TempData["message"] == null)
                    {
                        <h2>Forgot Your Password?</h2>
                    }
                    else
                    {
                        <h2>Check your email.</h2>
                    }

                </div>
                <div class="col-xs-3">
                </div>
            </div>
        </div>
    </div>

    @using (Html.BeginForm("ResetPassword", "Login", FormMethod.Post))
    {
        <div class="container-fluid bg-3">
            <div class="row">
                <div class="col-xs-3 col-sm-4">
                </div>
                <div class="col-xs-6 col-sm-4">
                    @if (TempData["message"] == null)
                    {
                        <div class="row">
                            <label>Cyber School will send a password reset link to the email address associated below.</label>
                        </div>
                        <br />
                        <div class="row">
                            <label>Email </label>
                        </div>
                        <div class="row">
                            @Html.TextBoxFor(model => model.UserEmail, new { @placeholder = "Enter Username", @class = "form-control", @required = "required" , type = "email" })
                        </div><br />
                        <div class="row">
                            <center>
                                <input type="submit" name="submit" value="Reset My Password" class="btn btn-info" style="" />
                            </center>
                        </div>
                        <div class="row">
                            <center>
                                <br />
                               <h5>Back to <a href="@Url.Action("Index","Login")">Login </a> Page.</h5>
                            </center>
                        </div>
                    }
                    
                    
                    @if (TempData["message"] != null)
                    {
                        <div class="row">
                            <center>
                                <p class="text-black-50">@TempData["message"]</p>
                            </center>
                        </div>
                    }

                    @if (TempData["ResultCode"]!=null && TempData["ResultCode"].ToString() == "003")
                    {
                        <center>
                            <a class="btn btn-info" href="@Url.Action("ResetPassword","Login")">Return to Reset Password Page</a>
                        </center>
                    }


                </div>
            </div><br /><br /><br /><br /><br /><br />
        </div>
    }

    <footer class="container-fluid text-center navbar-fixed-bottom">
        <p>Smart Education Center</p>
    </footer>

</body>

</html>