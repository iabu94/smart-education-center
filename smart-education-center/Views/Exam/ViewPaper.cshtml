@model IEnumerable<smart_education_center.Models.TestViewModel>
@{
    Layout = null;
    ViewBag.Title = "PaperView";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Cyber School</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

    <style>
        /* Remove the navbar's default margin-bottom and rounded borders */
        .navbar {
            margin-bottom: 0;
            border-radius: 0;
        }

        /* Add a gray background color and some padding to the footer */
        footer {
            background-color: #f2f2f2;
            padding: 25px;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"><img style="height:30px" src="~/Images/logo.png" /></a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="#">Home</a></li>
                    <li><a href="#">About</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("ViewSubject", "Exam", new { gradeID= TempData["GradeID"] })"><span class="glyphicon"></span> Back </a></li>
                    <li><a href="#"><span class="glyphicon glyphicon-log-in"></span> Thilina </a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="jumbotron">
        <div class="container text-center">
            <br />
            <div class="row">
                <div class="col-xs-3 col-sm-3" style="border:groove; border-radius:12px;">
                    <h3 style="font-size:2vw">Grade @Session["Grade"]</h3>
                </div>
                <div class="col-xs-6 col-sm-6">
                    <h1 style="font-size:3vw">Select Your Paper</h1>
                </div>
                <div class="col-xs-3 col-sm-3" style="border:groove; border-radius:12px;">
                    <h3 style="font-size:2vw">@Session["SubjectName"]</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid bg-3 text-center">

        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col-xs-1 col-sm-1">
                </div>
                <div class="col-xs-10 col-sm-6 text-center" style="border-radius:12px; border:1px solid black;" id="paper@(item.Id)">
                    <a class="btn btn-lg disabled" style="color:black;height:40px;font-size:1vw">@item.TestName</a>
                    @*<button type="button" style="width:100%;" class="btn btn-default"><h3>Subject @(i + 1)</h3></button><br />*@
                </div>
                <div class="col-xs-4 col-xs-offset-2 col-sm-2 col-sm-offset-0" style="padding-top:2px;">
                    <a href="@Url.Action("ViewQuestion", "Exam", new { paperID = item.Id, questionNumber = 1 })" class="btn btn-default" style="border-radius:12px; width:100%; height:40px; border:1px solid black;font-size:1vw" onmouseenter="style.borderColor = 'red'; getElementById('paper@(item.Id)').style.borderColor = 'red';" onmouseleave="style.borderColor = 'black'; getElementById('paper@(item.Id)').style.borderColor = 'black';">Paper I</a>
                </div>
                <div class="col-xs-4 col-sm-2" style="padding-top:2px;">
                    <a href="#" class="btn btn-default" style="border-radius:12px; width:100%;height:40px; border:1px solid black;font-size:1vw" onmouseenter="style.borderColor = 'red'; getElementById('paper@(item.Id)').style.borderColor = 'red';" onmouseleave="style.borderColor = 'black'; getElementById('paper@(item.Id)').style.borderColor = 'black';">Paper II</a>
                </div>
                <div class="col-xs-2 col-sm-1">
                </div>
            </div><br />
        }
    </div><br /><br /><br />
    <footer class="container-fluid text-center navbar-fixed-bottom" style="height:50px;">
        <p>Smart Education Center</p>
    </footer>
</body>
</html>