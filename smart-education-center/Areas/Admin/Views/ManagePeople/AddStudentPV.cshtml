@model smart_education_center.Models.Student

@{
    Layout = null;
}
<div class="modal-header site-theme" style="background-color:#343a40">
    <h4 class="modal-title pull-left" style="color:rgba(255, 255, 255, 0.5)">Add a new student</h4>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
<div class="site-theme">
    @using (Html.BeginForm("AddStudent", "ManagePeople", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <form id="formAC">
            <div style="padding-right:5px;padding-left:5px;padding-bottom:5px;padding-top:5px; background-color:#ffffff">

                <div class="navbar-form div-row" style="position:center">
                    @Html.Label("Student Number (Eg: SE_001)")
                    @Html.TextBoxFor(model => model.StudentNumber, new { @class = "form-control", @required = "required" })
                </div>
                <div class="navbar-form div-row" style="position:center">
                    @Html.Label("First Name")
                    @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", @required = "required" })
                </div>
                <div class="navbar-form div-row" style="position:center">
                    @Html.Label("Last Name")
                    @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", @required = "required" })
                </div>
                <div class="navbar-form div-row" style="position:center">
                    @Html.Label("username")
                    @Html.TextBoxFor(model => model.username, new { @class = "form-control", @required = "required" })
                </div>
                <div class="navbar-form div-row" style="position:center">
                    @Html.Label("password")
                    @Html.TextBoxFor(model => model.passHash, new { @class = "form-control", @required = "required" })
                </div>
            </div>
            <div class="modal-footer site-theme">
                <button type="submit" class="btn btn-success" required>Add</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
            </div>
        </form>
    }
</div>
