
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="wrapper">
    <div id="content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-4 col-sm-6 mb-3">
                    <div class="card text-white bg-primary o-hidden h-100">
                        <div class="card-body">
                            <div class="card-body-icon">
                                <i class="fas fa-fw fa-comments"></i>
                            </div>
                            <div class="mr-5">6 New Classes!</div>
                        </div>
                        <a class="card-footer text-white clearfix small z-1" href="#" onclick="addView(1)">
                            <span class="float-left">Add a new class</span>
                            <span class="float-right">
                                <i class="fas fa-angle-right"></i>
                            </span>
                        </a>
                    </div>
                </div>
                <div class="col-xl-4 col-sm-6 mb-3">
                    <div class="card text-white bg-warning o-hidden h-100">
                        <div class="card-body">
                            <div class="card-body-icon">
                                <i class="fas fa-fw fa-list"></i>
                            </div>
                            <div class="mr-5">10 New Subjects!</div>
                        </div>
                        <a class="card-footer text-white clearfix small z-1" href="#" onclick="addView(2)">
                            <span class="float-left">Add a new subject</span>
                            <span class="float-right">
                                <i class="fas fa-angle-right"></i>
                            </span>
                        </a>
                    </div>
                </div>
                <div class="col-xl-4 col-sm-6 mb-3">
                    <div class="card text-white bg-success o-hidden h-100">
                        <div class="card-body">
                            <div class="card-body-icon">
                                <i class="fas fa-fw fa-shopping-cart"></i>
                            </div>
                            <div class="mr-5">50+ different subjects from different classes!</div>
                        </div>
                        <a class="card-footer text-white clearfix small z-1" href="#" onclick="addView(3)">
                            <span class="float-left">Assign a subject to a class</span>
                            <span class="float-right">
                                <i class="fas fa-angle-right"></i>
                            </span>
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


<!--Popup model edit and view-->
<div class="modal fade" id="popupModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body site-theme-model" id="popupModalBodyDiv">
                @*popupPV*@
            </div>
        </div>
    </div>
</div>

<script src="~/Areas/Admin/scripts/jquery.min.js"></script>
<script>

    $(document).ready(function () {

        var resultCode = @Html.Raw(Json.Encode(TempData["ResultCode"]));
        var resultMessage = @Html.Raw(Json.Encode(TempData["ResultMessage"]));

        if (resultCode == 1) {
            toastr.success(resultMessage.toString());
        }

        if (resultCode == 2) {
            toastr.error(resultMessage.toString());
        }
    });

    var addView = function (type) {

        var url = '';
        if (type==1) {
            url = '@Url.Action("AddClass", "ManageClass")';
        }
        if (type==2) {
            url = '@Url.Action("AddSubject", "ManageClass")';
        }
        if (type==3) {
            url = '@Url.Action("AssignSubject", "ManageClass")';
        }

        $("#popupModalBodyDiv").load(url, function () {
            $("#popupModal").modal('show');
        })

    }
</script>